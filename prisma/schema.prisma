datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  name             String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  refreshToken     String?
  authoredProjects Project[] @relation("ProjectAuthor")
  projects         Project[] @relation("ProjectUsers")
  initiatedTasks   Task[]    @relation("TaskIniciator")
  performedTasks   Task[]    @relation("TaskPerformer")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation("ProjectAuthor", fields: [authorId], references: [id])
  authorId    Int
  users       User[]   @relation("ProjectUsers")
  tasks       Task[]
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  beginAt     DateTime?
  doneAt      DateTime?
  status      TaskStatus @default(CREATED)
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   Int
  performer   User?      @relation("TaskPerformer", fields: [performerId], references: [id])
  performerId Int?
  iniciator   User?      @relation("TaskIniciator", fields: [iniciatorId], references: [id])
  iniciatorId Int?
  deadline    DateTime
  spentTime   Int?
}

enum TaskStatus {
  CREATED
  IN_PROGRESS
  DONE
}
