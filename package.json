{
  "name": "tasks-manager",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:dc": "nodemon -L src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/index.js",
    "dc:img": "docker build -t tasks-img .",
    "dc:con": "docker run -p 5000:5000 -d --name tasks-manager-app tasks-img",
    "dc:cmp:down": "docker-compose down",
    "dc:cmp:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "dc:cmp:devb": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dc:cmp:devbv": "docker-compose -f docker-compose.dev.yml up -d --build -V",
    "dc:cmp:prod": "docker-compose -f docker-compose.yml up -d",
    "test": "jest"
  },
  "author": "Vital Alex",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "morgan": "^1.10.0"
  }
}
