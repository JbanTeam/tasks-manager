{
  "name": "tasks-manager",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.dev -- nodemon",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "prisma:gen": "npx prisma generate",
    "prisma:push": "npm prisma db push",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "dev:dc": "dotenv -e .env.dev -- nodemon -L",
    "dc:img": "docker build -t tasks-img .",
    "dc:con": "docker run -p 5000:5000 -d --name tasks-manager-app tasks-img",
    "dc:cmp:up": "docker compose up -d",
    "dc:cmp:stop": "docker compose stop",
    "dc:cmp:start": "docker compose start",
    "dc:cmp:down": "docker compose down",
    "dc:cmp:downv": "docker compose down --volumes",
    "dc:cmp:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "dc:cmp:devb": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "dc:cmp:devbv": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build -V",
    "dc:cmp:prod": "docker compose -f docker-compose.yml up -d",
    "dc:cmp:prodb": "docker compose -f docker-compose.yml up -d --build",
    "dc:cmp:prodbv": "docker compose -f docker-compose.yml up -d --build -V",
    "dc:prisma:gen": "docker compose exec app npx prisma generate",
    "dc:prisma:push": "docker compose exec app npm prisma db push",
    "dc:prisma:migrate": "docker compose exec app npx prisma migrate dev",
    "dc:exec:i": "docker exec -it tasks-app npm install",
    "dc:exec:rm": "docker exec -it tasks-app npm rm"
  },
  "author": "Vital Alex",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0"
  },
  "_moduleAliases": {
    "@src": "./dist"
  }
}
